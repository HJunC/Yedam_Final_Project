<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.yd.deval.comment.mapper.CommentMapper">

	<select id="comSelect"
		resultType="co.yd.deval.comment.service.CommentVO">
		select *
		from comments
		where comment_no = #{commentNo}
	</select>

	<select id="comSelectList"
		resultType="co.yd.deval.comment.service.CommentVO">
		SELECT *
		FROM COMMENTS
		WHERE BOARD_NO = #{boardNo}
		ORDER BY
		COMMENT_NO
	</select>

	<insert id="comInsert"
		parameterType="co.yd.deval.comment.service.CommentVO">
		INSERT INTO
		COMMENTS( COMMENT_NO
		, COMMENT_SUBJECT
		, WRITER
		, BOARD_NO
		)
		VALUES( COMMENT_NO_COUNT_SEQ.NEXTVAL
		, #{commentSub}
		, #{writer}
		, #{boardNo}
		)
	</insert>

	<delete id="comDelete"
		parameterType="co.yd.deval.comment.service.CommentVO">
		DELETE FROM COMMENTS
		WHERE COMMENT_NO = #{commentNo}
	</delete>

</mapper>