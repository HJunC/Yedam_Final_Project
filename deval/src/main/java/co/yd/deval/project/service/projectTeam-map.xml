<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="co.yd.deval.project.service.ProjectTeamMapper">

    <resultMap id="projectTeamResultMap" type="co.yd.deval.project.vo.ProjectTeamVO">
        <id property="projectNo" column="project_no"/>
        <result property="memberId" column="member_id"/>
        <result property="position" column="position"/>
        <result property="isLeader" column="isLeader"/>
    </resultMap>

    <insert id="insertProjectTeam"></insert>
    <update id="updateProjectTeam"></update>
    <delete id="deleteProjectTeam"></delete>

    <select id="selectProjectTeamAll" resultMap="projectTeamResultMap">
        SELECT *
        FROM PROJECT_TEAM
    </select>
    <select id="selectProjectTeam" resultMap="projectTeamResultMap">
        SELECT *
        FROM PROJECT_TEAM
        WHERE PROJECT_NO = #{projectNo}
    </select>
</mapper>