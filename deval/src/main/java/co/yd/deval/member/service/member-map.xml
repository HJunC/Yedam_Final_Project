<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.yd.deval.member.service.MemberMapper">
	<resultMap type="co.yd.deval.member.vo.MemberVO" id="memberMap">
		<id property="memberId" column="member_id"/>
		<result property="password" column="password"/>
		<result property="mail" column="mail"/>
		<result property="name" column="name"/>
		<result property="exp" column="exp"/>
		<result property="cashPt" column="cash_pt"/>
		<result property="resume" column="resume"/>
		<result property="profileImg" column="profile_img"/>
		<result property="role" column="role"/>
	</resultMap>
	
	<select id="memberSelect" resultMap="memberMap">
		SELECT member_id, password, mail, name, exp, cashPt, profile_img, 'ROLE_'||role as role
		FROM MEMBER
		WHERE MEMBER_ID = #{memberId}
	</select>
	
	<insert id="memberInsert" parameterType="co.yd.deval.member.vo.MemberVO">
		INSERT INTO MEMBER (MEMBER_ID,PASSWORD,MAIL,NAME)
		VALUES      (#{memberId},#{password},#{mail},#{name})
	</insert>
	
	<update id="memberUpdate" parameterType="co.yd.deval.member.vo.MemberVO">
		UPDATE MEMBER
		<set>
			<if test="password != null and password != ''"> PASSWORD = #{password}, </if>
			<if test="mail != null and mail != ''"> MAIL = #{mail}, </if>
			<if test="name != nulland name != ''"> NAME = #{name}, </if>
			<if test="resume != null and resume != ''"> RESUME = #{resume}, </if>
			<if test="profileImg != null and profileImg != ''"> PROFILE_IMG = #{profileImg}, </if>
		</set>
		WHERE MEMBER_ID = #{memberId}
	</update>
	
	<delete id="memberDelete" parameterType="co.yd.deval.member.vo.MemberVO">
		DELETE FROM MEMBER
		WHERE  MEMBER_ID = #{memberId}
		AND    PASSWORD = #{password}
	</delete>
	
	<update id="memberExpUp" parameterType="HashMap">
		UPDATE MEMBER
		SET EXP = EXP + #{exp}
		WHERE MEMBER_ID = #{id}
	</update>
	
	<update id="memberCashUpdate" parameterType="HashMap">
		UPDATE MEMBER
		SET CASH_PT = CASH_PT + #{cash}
		WHERE MEMBER_ID = #{id}
	</update>
	
	
</mapper>